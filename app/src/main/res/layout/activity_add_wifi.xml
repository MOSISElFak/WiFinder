<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/borderz"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp"
    tools:context="com.example.riki.myplaces.AddWifiActivity">

    <TextView
        android:id="@+id/passwordWifi"
        android:visibility="gone"
        android:layout_width="105dp"
        android:layout_height="34dp"
        android:text="Password"
        android:textColor="@color/colorBlack"
        app:layout_constraintRight_toLeftOf="@+id/guideline6"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/nameWifi"
        app:layout_constraintHorizontal_bias="0.535" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarProfile"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />


    <ImageView
        android:id="@+id/cancelButton"
        android:layout_width="25dp"
        android:layout_height="34dp"
        android:clickable="true"
        app:srcCompat="@drawable/unchecked"
        android:layout_marginLeft="21dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/friendPhoto"
        android:layout_width="186dp"
        android:layout_height="167dp"
        app:srcCompat="@drawable/friends"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp" />

    <TextView
        android:id="@+id/nameWifi"
        android:layout_width="106dp"
        android:layout_height="33dp"
        android:text="Name"
        android:textColor="@color/colorBlack"
        app:layout_constraintRight_toLeftOf="@+id/guideline6"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="241dp"
        app:layout_constraintHorizontal_bias="0.542" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        app:layout_constraintGuide_begin="192dp"
        android:orientation="vertical" />

    <EditText
        android:id="@+id/name"
        android:layout_width="108dp"
        android:layout_height="32dp"
        android:ems="10"
        android:textSize="11dp"
        android:inputType="textPersonName"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline6"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="241dp"
        android:backgroundTint="@color/colorBlack"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/password"
        android:layout_width="110dp"
        android:layout_height="31dp"
        android:ems="10"
        android:textSize="11dp"
        android:visibility="gone"
        android:inputType="textPassword"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline6"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:backgroundTint="@color/colorBlack"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add WiFi"
        android:layout_marginTop="121dp"
        app:layout_constraintTop_toBottomOf="@+id/friendPhoto"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.846" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button5"
        android:layout_marginRight="8dp"
        android:layout_marginTop="128dp"
        app:layout_constraintTop_toBottomOf="@+id/friendPhoto"
        app:layout_constraintHorizontal_bias="0.552" />

</android.support.constraint.ConstraintLayout>
